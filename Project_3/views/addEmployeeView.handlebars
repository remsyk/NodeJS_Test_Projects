 <div class="table-responsive">
  <form method="post" action="/employee/add">
    <table class="table table-condensed">
      <tbody>
       <tr>
        <th width="200">Id: </th>
        <td><input type="text" name="eid" required
              placeholder="Enter Employee ID"></td>
       </tr>
       <tr>
         <th>First Name: </th>
         <td><input type="text" name="firstName" required
              placeholder="Enter Employee First Name"></td>
       </tr>
       <tr>
         <th>Last Name: </th>
         <td><input type="text" name="lastName" size="40"
              placeholder="Enter Employee Last Name"></td>
       </tr>
      </tbody>
      <tfooter>
        <tr>
          <td></td>
          <td>
           <input type="submit" value="Save"
              class="btn btn-success">
           <input type="button" value="Cancel"
              class="btn btn-danger" onclick="cancelAdd()">
          </td>
        </tr>
      </tfooter>
    </table>
  </form>
</div>
